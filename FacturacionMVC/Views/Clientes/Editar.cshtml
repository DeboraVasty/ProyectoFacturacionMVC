@model FacturacionMVC.Models.Cliente
@{
    ViewData["Title"] = "Editar";
}

<div class="container">
    <div class="row">
        <h3> Editar Cliente</h3>
    </div>


    <div class="row">
        <form method="post" asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="codigoCliente" />
            <div class="form-group">
                <label asp-for="Nombres" class="control-labael"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="control-labael"></label>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nit" class="control-labael"></label>
                <input asp-for="Nit" class="form-control" />
                <span asp-validation-for="Nit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefonos" class="control-labael"></label>
                <input asp-for="Telefonos" class="form-control" />
                <span asp-validation-for="Telefonos" class="text-danger"></span>
            </div>




            <div class="btn-group mr-2" role="group" aria-label="First group">
                <label asp-for="Activo" class="control-labael"></label>
                <select asp-for="Activo" class="form-control" id="exampleFormControlSelect1">
                    <option>S</option>
                    <option>N</option>

                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Editar Cliente" class="" btn btn-primary" />
            </div>



        </form>

    </div>
</div>


