@model FacturacionMVC.Models.Producto
@{
    ViewData["Title"] = "Editar";
}


<div class="container ">
    <div class="row">
        <h3> Editar Productos</h3>
    </div>


    <div class="row center-block">
        <form method="post" asp-action="Editar">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodigoProducto" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-labael"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-labael"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-labael"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Costo" class="control-labael"></label>
                <input asp-for="Costo" class="form-control" />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Existencia" class="control-labael"></label>
                <input asp-for="Existencia" class="form-control" />
                <span asp-validation-for="Existencia" class="text-danger"></span>
            </div>


            <div class="btn-group mr-2" role="group" aria-label="First group">
                <label asp-for="Activo" class="control-labael"></label>
                <select asp-for="Activo" class="form-control" id="exampleFormControlSelect1">
                    <option>S</option>
                    <option>N</option>

                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Producto" class="" btn btn-primary" />
            </div>



        </form>

    </div>
</div>


