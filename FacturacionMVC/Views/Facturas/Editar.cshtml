@model FacturacionMVC.Models.Factura
@{
    ViewData["Title"] = "Editar";
}

<div class="container">
    <div class="row">
        <h3> Editar Factura</h3>
    </div>


    <div class="row">
        <form method="post" asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NumeroFactura" />

            <div class="form-group">
                <label asp-for="Fecha" class="control-labael"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codigoCliente" class="control-label"></label>
                <select asp-for="codigoCliente" class="form-control" asp-items="ViewBag.id"></select>
            </div>
            <div class="form-group">
                <label asp-for="TotalFactura" class="control-labael"></label>
                <input asp-for="TotalFactura" class="form-control" readonly />
                <span asp-validation-for="TotalFactura" class="text-danger"></span>
            </div>


            <div class="btn-group mr-2" role="group" aria-label="First group">
                <label asp-for="Anulada" class="control-labael"></label>
                <select asp-for="Anulada" class="form-control" id="exampleFormControlSelect1">
                    <option>S</option>
                    <option>N</option>

                </select>

            </div>
            <div class="form-group ">
                <input type="submit" value="Editar  Factura" class="" btn btn-primary />
            </div>


        </form>

    </div>
</div>

