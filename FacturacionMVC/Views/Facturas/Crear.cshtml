@model FacturacionMVC.Models.Factura
@{
    ViewData["Title"] = "Crear";
}


<div class="container ">
    <div class="row">
        <h3> Agregar Factura</h3>
    </div>


    <div class="row center-block">
        <form method="post" asp-action="Crear">
            <div class="form-group">
                <label asp-for="Fecha" class="control-labael"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalFactura" class="control-labael"></label>
                <input asp-for="TotalFactura" class="form-control" value="0.00" readonly />
                <span asp-validation-for="TotalFactura" class="text-danger"></span>
            </div>


            <div class="btn-group mr-2" role="group" aria-label="First group">
                <label asp-for="Anulada" class="control-labael"></label>
                <select asp-for="Anulada" class="form-control" id="exampleFormControlSelect1">
                    <option>S</option>
                    <option>N</option>

                </select>

            </div>

            <div class="form-group">
                <label asp-for="codigoCliente" class="control-labael"></label>
                <select asp-for="codigoCliente" class="form-control" asp-items="ViewBag.id"></select>

            </div>
            <div class="form-group ">
                <input type="submit" value="Agregar Producto" class="" btn btn-primary />
            </div>



        </form>

    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
