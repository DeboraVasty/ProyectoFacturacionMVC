@model IEnumerable<FacturacionMVC.Models.FacturaProducto>
@{
    ViewData["Title"] = "Index";
}


<div class="container">

    <div class="col-sm-6">
        <h3> Detalle Factura</h3>
        <a class="btn btn-success d-block" asp-action="Crear" asp-controller="FacturaProducto" asp-route-id="@TempData["NoFactura"]"> Agregar </a>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td> @Html.DisplayNameFor(m => m.NumeroFactura)</td>
                        <td> @Html.DisplayNameFor(m => m.CodProducto)</td>
                        <td> @Html.DisplayNameFor(m => m.cantidad)</td>
                        <td> @Html.DisplayNameFor(m => m.precioUnitario)</td>
                        <td>  </td>

                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.NumeroFactura </td>
                            <td> @item.CodProducto.Nombre </td>
                            <td> @item.cantidad </td>
                            <td> @item.precioUnitario </td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", new { id = @TempData["NoFactura"], codigo_producto = item.CodigoProducto }, new { @class = "btn btn-warning" })
                                                        @Html.ActionLink("Eliminar", "Delete", new { id = @TempData["NoFactura"], codigo_producto = item.CodigoProducto }, new { @class = "btn btn-danger" })
                                                    </td>

                        </tr>



                    }
                </tbody>
            </table>
        }
    </div>
</div>


